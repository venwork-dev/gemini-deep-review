{
  "name": "gemini-code-review",
  "version": "0.1.0",
  "description": "AI-powered code review tool using Google Gemini with deep reasoning for React/TypeScript",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "gemini-review": "dist/cli.js"
  },
  "scripts": {
    "dev": "tsx src/cli.ts",
    "build": "tsc",
    "test": "tsx src/cli.ts test-samples/UserProfile.tsx",
    "test:perfect": "tsx src/cli.ts test-samples/PerfectComponent.tsx",
    "review": "tsx src/cli.ts",
    "copy:env": "cp .env.example .env"
  },
  "keywords": [
    "code-review",
    "gemini",
    "ai",
    "react",
    "typescript",
    "vertex-ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@google/generative-ai": "^0.21.0",
    "@types/react": "^19.2.8",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.5",
    "gray-matter": "^4.0.3",
    "ora": "^8.0.1",
    "react": "^19.2.3",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
